@model EntityLayer.Concrate.Heading
@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("AddHeading", "Heading", FormMethod.Post))
{
<div class="form-group">
    @Html.Label("başlık Adı")
    @Html.TextBoxFor(x => x.HeadingName, new { @class = "form control" })
    @Html.ValidationMessageFor(x => x.HeadingName)
    <br />
    <br />
    @Html.Label("Kategori")
    @Html.DropDownListFor(x=> x.CategoryID,(List<SelectListItem>)ViewBag.vc, new { @class = "form control" })
    <br />
    <br />
    @Html.Label("Yazar")
    @Html.TextBoxFor(x => x.WriterID, new { @class = "form control" })
    @Html.ValidationMessageFor(x => x.WriterID)
    <br />

    <button class="btn btn-danger">Başlığı Oluştur</button>

</div>

}
